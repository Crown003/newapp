
<OneLineList>
	font_style:"H6"
	on_release:
		root.students_details_sheet(self.text)
		
<StudentDialogbox>
	size_hint:.8,None
	height: "450dp"  if Window.size[0] > 2000 else "500dp"
	pos_hint:{"center_y":.5}
	MDBoxLayout:
		orientation:"vertical"
		AsyncImage:
			id:student_img
			source:""
			size_hint:None,None
			height:"300px" if Window.size[0] > 2000 else "250px"
			width:"300px"if Window.size[0] > 2000 else "250px"
			pos_hint:{'center_x':.2,"top":.2} if Window.size[0] > 2000 else {'center_x':.2,"top":.02}
		MDLabel:
			id:image_label
			text:""
			halign:"center"
			font_name:"Ubuntu/Ubuntu-Medium"	
		MDTextField:
			id:Enroll_field
			text:"Enrollment no."	
			helper_text:"" 
			text_color:0,0,0,1
			font_name:"Ubuntu/Ubuntu-Medium"
			helper_text_mode:"on_focus"
			disabled:True
			color_mode:"custom"
			md_bg_color:1,1,1,1
			line_color_normal:0,0,0,1
			halign:"center"
			pos_hint:{"center_x":.5} if Window.size[0] > 2000 else {"center_x":.5}
			line_color_focus:get_color_from_hex("00dbff")
			icon_right:""	
			icon_right_color:app.theme_cls.primary_color	
		MDTextField:
			id:Name_field				
			text:"name"
			helper_text:"" 
			text_color:0,0,0,1
			md_bg_color:1,1,1,1
			font_name:"Ubuntu/Ubuntu-Medium"
			helper_text_mode:"on_focus"
			disabled:True
			halign:"center"
			pos_hint:{"center_x":.5} if Window.size[0] > 2000 else {"center_x":.5}
			color_mode:"custom"
			line_color_normal:0,0,0,1
			line_color_focus:get_color_from_hex("00dbff")
			icon_right:""	
			icon_right_color:app.theme_cls.primary_color
	
		MDTextField:
			id:Class_field		
			text:"class+sec"
			helper_text:"" 
			text_color:0,0,0,1
			halign:"center"
			md_bg_color:1,1,1,1
			pos_hint:{"center_x":.5} if Window.size[0] > 2000 else {"center_x":.5}
			font_name:"Ubuntu/Ubuntu-Medium"
			helper_text_mode:"on_focus"
			disabled:True
			color_mode:"custom"
			line_color_normal:0,0,0,1
			line_color_focus:get_color_from_hex("00dbff")
			icon_right:""	
			icon_right_color:app.theme_cls.primary_color
			
		MDTextField:
			id:Email_field		
			text:"email"
			helper_text:"" 
			text_color:0,0,0,1
			halign:"center"
			pos_hint:{"center_x":.5} if Window.size[0] > 2000 else {"center_x":.5}
			font_name:"Ubuntu/Ubuntu-Medium"
			helper_text_mode:"on_focus"
			disabled:True
			color_mode:"custom"
			line_color_normal:0,0,0,1
			line_color_focus:get_color_from_hex("00dbff")
			icon_right:""	
			icon_right_color:app.theme_cls.primary_color
			
		MDTextField:
			id:Phone_field
			text:"Phone"
			helper_text:"" 
			text_color:0,0,0,1
			halign:"center"
			pos_hint:{"center_x":.5} if Window.size[0] > 2000 else {"center_x":.5}
			font_name:"Ubuntu/Ubuntu-Medium"
			helper_text_mode:"on_focus"
			disabled:True
			color_mode:"custom"
			line_color_normal:0,0,0,1
			line_color_focus:get_color_from_hex("00dbff")
			icon_right:""	
			icon_right_color:app.theme_cls.primary_color
		MDFillRoundFlatButton:
			text:"Get data"
			halign:"center"
			radius:[12]
			pos_hint:{"center_x":.5} if Window.size[0] > 2000 else {"center_x":.5}
			on_press:
				image_label.text = "Loading data..."
			on_release:
				root.update_values()
		Widget:

<Student_Details>:
	name:"Student_Details"
	on_leave:
		grid.clear_widgets()
	MDFloatLayout:
		size_hint:1,1
		md_bg_color:get_color_from_hex("#4467c4")
		MDIconButton:
			icon:"arrow-left"
			theme_text_color: 'Custom'
			ripple_scale:0
			text_color: get_color_from_hex('#000000')
			pos_hint:{"center_x":.08,"center_y":.95}
			on_release:
				root.manager.current ="Teachers_interface"
				#root.manager.transition.direction = "right"
		MDLabel:
			text:"Students Details"
			theme_text_color:"Custom"
			text_color:0,0,0,1
			font_name:"Ubuntu/Ubuntu-Bold"
			font_size:"24dp"
			pos_hint:{"center_x":.63,"center_y":.95}
		MDLabel:
			id:loading
			halign:"center"
			pos_hint:{"center_y":.5}
			font_size:"18dp"
			color:1,1,1,1
			font_name:"Ubuntu/Ubuntu-Bold"
			text:"Loading..." if grid.children == [] else ""
		ScrollView:
			size_hint_y: .9
			do_scroll_y:True
			MDGridLayout:
				cols:1
				rows:None
				size_hint:1,None
				pos_hint:{"top":.9}
				height:self.minimum_height
				spacing:30
				padding:20
				MDList:
					id:grid
					radius:[30]
					md_bg_color:get_color_from_hex("#ffffff")
				