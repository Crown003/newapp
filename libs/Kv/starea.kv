				Icons:
					outline:True
					outline_color:0,0,1,1
					MDFloatLayout:
						MDIconButton:
							icon:"list-status"
							pos_hint:{"center_y":.6,"center_x":.5}	
							user_font_size:"35sp"
							size_hint:None,None
							theme_text_color:"Custom"
							text_color:textcolor
							on_release:
								root.manager.set_current("Questions")
								root.manager.transition.direction = "left"
						MDLabel:
							text:"questions"
							size_hint:.5,None
							size: self.texture_size
							font_name:"Ubuntu/Ubuntu-Bold"
							halign:"center"
							color:fontcolor
							pos_hint:{"center_y":.1,"center_x":.5}
							text_color:get_color_from_hex('#ffffff')
				Icons:
					on_release:
						root.manager.current = "Syllabus"
					MDFloatLayout:
						MDIconButton:
							icon:"format-list-text"
							pos_hint:{"center_y":.6,"center_x":.5}	
							user_font_size:"35sp"
