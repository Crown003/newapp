#:import get_color_from_hex kivy.utils.get_color_from_hex
<Splash_Screen>:
	name:"splash"
	on_leave:progress.active = False
	MDFloatLayout:
		orientation:"vertical"
		md_bg_color:app.theme_cls.primary_color
		MDBoxLayout:
			size_hint:.95,None
			height:"280dp"
			pos_hint:{"center_x":.5,"center_y":.8}
			md_bg_color : get_color_from_hex("f3f3f3")#app.theme_cls.primary_dark
			radius:[30,30,30,30]
			padding:10
			RelativeLayout:
				Image:
					source:app.image
					size_hint:None,None
					pos_hint:{"center_x":.3,"center_y":.5}
					height:"200dp"
					width:"200dp"
				MDLabel:
					size_hint_y:None
					text:"Saraswati Vidiya Mandir"
					font_name:"Ubuntu/Ubuntu-Bold"
					color:app.theme_cls.primary_dark
					font_size:"32dp"
					halign:"center"
					pos_hint:{"center_x":1.25,"center_y":.5}
			Widget:
		MDSpinner:
			id:progress
			size_hint: None, None
			size: dp(46), dp(46)
			color:.9,.9,.9,1
			pos_hint: {'center_x': .5, 'center_y': .2}
			active: True 
                
				
				
		